{
  "include": ["packages/*/src", "packages/types/Account.ts"],
  "exclude": ["node_modules", "packages/*/node_modules"],
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "sourceMap": true,
    "noEmit": false,
    "noEmitOnError": true,
    "emitDeclarationOnly": true,
    "paths": {
      
      "@/*": ["packages/js/src/*"],
      "@metaplex-foundation/js": ["packages/js/src"],
      "@metaplex-foundation/js/*": ["packages/js/src/*"],
      "@metaplex-foundation/js-plugin-storage-module": ["packages/js-plugin-storage-module/src"],
      "@metaplex-foundation/js-plugin-storage-module/*": ["packages/js-plugin-storage-module/src/*"],
      "@metaplex-foundation/js-plugin-nft-storage": ["packages/js-plugin-nft-storage/src"],
      "@metaplex-foundation/js-plugin-nft-storage/*": ["packages/js-plugin-nft-storage/src/*"],
      "@metaplex-foundation/js-plugin-token-module": ["packages/js-plugin-token-module/src"],
      "@metaplex-foundation/js-plugin-token-module/*": ["packages/js-plugin-token-module/src/*"],
      "@metaplex-foundation/js-plugin-rpc-module": ["packages/js-plugin-rpc-module/src"],
      "@metaplex-foundation/js-plugin-rpc-module/*": ["packages/js-plugin-rpc-module/src/*"],
      "@metaplex-foundation/js-plugin-nft-module": ["packages/js-plugin-nft-module/src"],
      "@metaplex-foundation/js-plugin-nft-module/*": ["packages/js-plugin-nft-module/src/*"],
      "@metaplex-foundation/js-plugin-candy-machine-module": ["packages/js-plugin-candy-machine-module/src"],
      "@metaplex-foundation/js-plugin-candy-machine-module/*": ["packages/js-plugin-candy-machine-module/src/*"],
      "@metaplex-foundation/js-plugin-auction-house-module": ["packages/js-plugin-auction-house-module/src"],
      "@metaplex-foundation/js-plugin-auction-house-module/*": ["packages/js-plugin-auction-house-module/src/*"]
    },

    "target": "es2019",
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": false,
    "skipLibCheck": true,

    "noUnusedLocals": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": false,
    "strict": true,
    "isolatedModules": true,

    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "jsx": "preserve",
    "stripInternal": true
  },
  "typedocOptions": {
    "entryPoints": ".",
    "entryPointStrategy": "packages",
    "plugin": ["./infra/typedoc-plugin.js"],
    "out": "docs",
    "readme": "README.md",
    "name": "API References",
    "includeVersion": true,
    "excludeNotDocumented": false,
    "sort": ["static-first", "required-first", "source-order"],
    "categoryOrder": [
      "Constructors",
      "Types",
      "Inputs",
      "Outputs",
      "Contexts",
      "*"
    ]
  }
}
