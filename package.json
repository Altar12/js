  },
  "scripts": {
    "clean": "lerna run clean",
    "build": "lerna run build",
    "test": "yarn workspaces run test --testPathIgnorePatterns=/integration_tests/",
    "lint:test": "yarn workspaces run lint:test",
    "lint:fix": "yarn workspaces  run lint:fix",
    "format": "prettier --write packages/ apps/",
    "docs": "typedoc",
    "deploy:docs": "yarn docs && gh-pages --dist docs --dotfiles",
    "publish": "lerna publish from-package",
    "amman:start": "DEBUG='amman:(info|error|debug)' amman start",
    "amman:stop": "amman stop",
    "lint": "prettier -c ."
  },
